<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundfix"
    android:orientation="vertical"
    tools:context="id.sch.smktelkom_mlg.project2.xirpl204051233.fiqihwanita.AboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/layout_shape_1"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/imageViewFoto1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="7dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_shape"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ra" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Aura Lintang Alif S"
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:text="Malang"
                            android:textColor="#FFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/layout_shape_1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewFoto2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="7dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_shape"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bl" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Bela Amalia"
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:text="Banyuwangi"
                            android:textColor="#FFF" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/layout_shape_1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewFoto3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="7dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_shape"
                            android:scaleType="centerCrop"
                            android:src="@drawable/is" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Ismi Oktavia Nihayati"
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:text="Jombang"
                            android:textColor="#FFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/layout_shape_1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewFoto4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="7dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_shape"
                            android:scaleType="centerCrop"
                            android:src="@drawable/yn" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Yeni Nur Azizah"
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:text="Banyuwangi"
                            android:textColor="#FFF" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/layout_shape_2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Terimakasih Kepada Allah SWT yang telah meridhoi kami dalam membuat aplikasi ini. Semoga aplikasi ini bermanfaat. Aamiin  "
                    android:textColor="#FFF" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
